<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/appRed</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewWhite</item>
        <item name="editTextStyle">@style/EditTextWhite</item>
        <item name="checkboxStyle">@style/CheckBoxWhite</item>
    </style>

    <style name="btnBlack">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CheckBoxWhite" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/appWhite</item>
        <item name="android:buttonTint">@color/appWhite</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextWhite" parent="android:Widget.EditText">
        <item name="android:textColor">@color/appWhite</item>
        <item name="android:textColorHint">@color/etGrey</item>
        <item name="android:backgroundTint">@color/etGrey</item>
    </style>

    <style name="header">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="catSelect">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="faqs">
        <item name="android:background">@drawable/borders</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:onClick">expandMenu</item>
    </style>

    <style name="qO">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/question</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textColor">@color/appRed</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="qC">
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/question_c</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textColor">@color/appRed</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="qF">
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/question_f</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textColor">@color/appWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="qS">
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/question_s</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:textColor">@color/appRed</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="qV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/appWhite</item>
    </style>

    <style name="statsO">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="statsOSmall">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="TextViewButtons">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="android:background">#ac1900</item>
    </style>

    <style name="TextViewProfile">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/appWhite</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>

    <style name="TextViewWhite" parent="android:Widget.TextView">
        <item name="android:textColor">@color/appWhite</item>
    </style>

    <style name="worldO">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/appRed</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
